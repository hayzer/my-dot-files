# Environment local variables

# Quttera
export WIS_PERL5LIB=/home/hayzer/quttera_sources/web/wis/lib/
export WIS_LIB=/home/hayzer/quttera_sources/web/wis

######
# Fix history
export HISTSIZE="5000"

# Ignore spamming
export HISTIGNORE="cd:ls:[bf]g:clear:exit"

# Ignore duplicates
export HISTCONTROL="ignoredups"

# Add time to the history output
export HISTTIMEFORMAT="%D %R: "
