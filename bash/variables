# Environment local variables
if [ -f ~/.local_variables ]; then
	. ~/.local_variables
fi

# Quttera
export WIS_PERL5LIB=/home/hayzer/quttera_sources/web/wis/lib/
export WIS_LIB=/home/hayzer/quttera_sources/web/wis

export EDITOR=vim

######
# Fix history
export HISTSIZE=-1
export HISTFILESIZE=-1

# Ignore spamming
export HISTIGNORE="ls:[bf]g:clear:exit:shutdown"

# Ignore duplicates
export HISTCONTROL="ignoredups"

# Add time to the history output
export HISTTIMEFORMAT="%D %R: "
