# Environment local variables
if [ -f ~/.local_variables ]; then
	. ~/.local_variables
fi

export EDITOR=vim

######
# Fix history
export HISTSIZE=-1
export HISTFILESIZE=-1

# Ignore spamming
export HISTIGNORE="ls:[bf]g:clear:exit:shutdown"

# Ignore duplicates
export HISTCONTROL="ignoredups"

# Add time to the history output
export HISTTIMEFORMAT="%D %R: "

# Go
export GOPATH=${HOME}/go
export GOROOT=/usr/local/go
export GOBIN=${HOME}/go/bin
